<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <TextView
        android:id="@+id/textVTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textVDesc"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textVDesc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textVTitle"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="Description"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textVPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textVTitle"
        android:layout_marginTop="5dp"
        android:layout_marginRight="14dp"
        android:text="Priority"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>

    <TextView
        android:id="@+id/textVNoPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textVPriority"
        android:layout_toEndOf="@+id/textVDesc"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:text="1"
        android:textSize="20sp"
        android:textAlignment="textEnd"/>

</RelativeLayout>